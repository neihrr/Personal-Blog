<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> BlogMVC </title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/css2.css" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kaisei+Opti:wght@500&display=swap" rel="stylesheet">


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500&display=swap" rel="stylesheet">
</head>
<body class="layout_body">
    <header class="blog-header py-3">
        <div class="row flex-nowrap justify-content-between align-items-center" style="padding-left:115px;">
           
            <div class="col-4 text-center">
                <a class="blog-header-logo text-dark" id="BLogM_title" href="#">BlogM</a>
               
            </div>
            <div class="col-4 d-flex justify-content-end align-items-center">
                <form asp-controller="Home" asp-action="Search" method="Post">
                    <input type="search" class="form-control ds-input" id="search-input" placeholder="Search..." name="searchString" aria-label="Search for..." style="width: 105px; margin-right:110px;"  />
                </form>
                

                
                @if (User.Identity.IsAuthenticated)
                {

                    <a id="signbutton" class="btn btn-sm btn-outline-secondary" asp-controller="Auth" asp-action="Logout"> Logout</a>

                }

                else
                {
                    <a id="signbutton" class="btn btn-sm btn-outline-secondary" asp-controller="Auth" asp-action="Login"> Sign In</a>

                }
            </div>
        </div>
    </header>
    <hr />

    <div class="nav-scroller py-1 mb-2">
        <nav class="nav d-flex justify-content-between">
            <a class="nav-1" asp-controller="Home" asp-action="Index">Home</a>
            
            <a  class="nav-1" asp-controller="Home" asp-action="Edit">Create Post</a>
            <a  class="nav-1" asp-controller="Panel" asp-action="Index">Admin Panel</a>


        </nav>
    </div>
    <hr />


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - BlogMVC <a asp-area="" asp-controller="Home"></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
