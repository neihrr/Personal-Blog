@model List<BlogMVC.Data.Content>

@{
    ViewData["Title"] = "Panel Page";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> BlogMVC </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kaisei+Opti:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/mycss.css">
</head>

<div class="row mb-2">
    @foreach (var content in Model)
    {
        <div class="col-md-6">
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                    <strong class="d-inline-block mb-2 text-primary">@content.Genre</strong>
                    <h3 class="mb-0">
                        <a class="card-link" asp-controller="Home" asp-action="Post" asp-route-id="@content.Id"> @content.Title</a>

                    </h3>
                    <div class="mb-1 text-muted">Nov 12</div>
                    <p class="card-text mb-auto">@content.Body</p>
                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@content.Id"> Edit </a>
                    <a asp-controller="Home" asp-action="Remove" asp-route-id="@content.Id"> Remove </a>
                   

                </div>
            </div>
        </div>
        

    }
</div>

